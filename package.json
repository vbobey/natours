{
    "name": "styling-practice",
    "version": "1.0.0",
    "description": "Styling practice from advanced CSS and Sass cource: Part 1 - Natours project",
    "main": "index.js",
    "scripts": {
        "watch:sass": "node-sass sass/main.scss css/style.css -w",
        "devserver": "live-server",
        "start": "npm-run-all --parallel devserver watch:sass",
        "compile:sass": "node-sass sass/main.scss css/style.comp.css",
        "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
        "prefix:css": "postcss --use autoprefixer -b 'last 5 versions' css/style.concat.css -o css/style.prefix.css",
        "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
        "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vbobey/styling-practice.git"
    },
    "author": "Victoria",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/vbobey/styling-practice/issues"
    },
    "homepage": "https://github.com/vbobey/styling-practice#readme",
    "devDependencies": {
        "autoprefixer": "^10.2.5",
        "node-sass": "^5.0.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.2.10",
        "postcss-cli": "^8.3.1"
    },
    "dependencies": {
        "concat": "^1.0.3"
    }
}
